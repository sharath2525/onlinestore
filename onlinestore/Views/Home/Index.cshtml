@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Grocery Store</title>
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <a href="#">Grocery Store</a>
        </div>
        <div>
            <a href="home/login">Signing In</a>
            <a href="home/signup">Sign Up</a>
        </div>
    </div>
    <div class="header">
        <h1>Welcome to Our Online Grocery Store</h1>
        <p>Find the best products at the best prices!</p>
    </div>
    <div class="container">
        <div class="products">
            <!-- Product 1 -->
            <div class="product">
                <img src="./images/Bread.png" alt="Product 1">
                <h2>Product 1</h2>
                <p>$10.00</p>
            </div>
            <!-- Product 2 -->
            <div class="product">
                <img src="./images/Peanut.png" alt="Product 2">
                <h2>Product 2</h2>
                <p>$15.00</p>
            </div>
            <!-- Product 3 -->
            <div class="product">
                <img src="./images/Designer.png" alt="Product 3">
                <h2>Product 3</h2>
                <p>$20.00</p>
            </div>
            <!-- Add more products as needed -->
        </div>
    </div>
    <script src="scripts.js"></script>
</body>
</html>